{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "baseUrl": "./src",
        "paths": {
            "@/Controllers/*": ["Controllers/*"],
            "@/Models/*": ["Models/*"],
            "@/Middleware/*": ["Middleware/*"],
            "@/Routes/*": ["Routes/*"],
            "@/Services/*": ["Services/*"],
            "@/Types/*": ["Types/*"]
        },

        "outDir": "dist",

        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        "strict": true,
        "skipLibCheck": true
    }
}
